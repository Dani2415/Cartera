<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danig_000.cartera.Inhabilitar_Cobra">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INHABILITAR COBRADOR"
        android:id="@+id/tvtitulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#37fbf2"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEDULA:"
        android:id="@+id/tvced"
        android:layout_below="@+id/tvtitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:textColor="#626060"
        android:textStyle="bold"
        android:textSize="22dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp"
        android:id="@+id/linearLayout3">

        <Button
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="INHABILITA"
            android:id="@+id/btinhabilita"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#676565"
            android:gravity="center"
            android:background="#c9c9c9"
            android:layout_marginRight="8dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:id="@+id/btcancel"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#676565"
            android:gravity="center"
            android:background="#c9c9c9" />
    </LinearLayout>

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edcedula"
        android:layout_below="@+id/tvced"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout3"
        android:choiceMode="singleChoice" />

</RelativeLayout>
