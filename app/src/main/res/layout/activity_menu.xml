<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danig_000.cartera.Menu">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADMINISTRADOR"
        android:id="@+id/btnadmin"
        android:layout_marginTop="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#959090"
        android:background="#0f737374"
        android:onClick="PasarAdmin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COBRADOR"
        android:id="@+id/btncobra"
        android:layout_below="@+id/btnadmin"
        android:layout_alignLeft="@+id/btnadmin"
        android:layout_alignStart="@+id/btnadmin"
        android:layout_marginTop="77dp"
        android:layout_alignRight="@+id/btnadmin"
        android:layout_alignEnd="@+id/btnadmin"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#959090"
        android:background="#0f737374"
        android:onClick="PasarCobra" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CARTERA YA!!"
        android:id="@+id/tvtitulo"
        android:layout_alignParentTop="false"
        android:layout_marginTop="42dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#6c009a"
        android:gravity="center" />
</RelativeLayout>
