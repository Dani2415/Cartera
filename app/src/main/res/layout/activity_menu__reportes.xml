<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danig_000.cartera.Menu_Reportes">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REPORTES"
        android:id="@+id/tvrepor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#61f6ea"
        android:textStyle="bold"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Por Prestamo"
        android:id="@+id/btprestamo"
        android:layout_below="@+id/tvrepor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:background="#dddada"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#747373" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pagos Por Clientes"
        android:id="@+id/btcliente"
        android:layout_below="@+id/btprestamo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#dddada"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#747373"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pagos Por Cobrador"
        android:id="@+id/btcobrador"
        android:layout_below="@+id/btcliente"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#dddada"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#747373"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOLVER"
        android:id="@+id/btvolver"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:background="#dddada"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#747373"
        android:layout_below="@+id/btcobrador"
        android:layout_centerHorizontal="true"
        android:onClick="MReporteVolverMAdmin" />
</RelativeLayout>
