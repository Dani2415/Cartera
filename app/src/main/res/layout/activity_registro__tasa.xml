<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danig_000.cartera.Registro_Tasa">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO TASA"
        android:id="@+id/tvtitulo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="34dp"
        android:textColor="#1bf9f9"
        android:foregroundGravity="center"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODIGO:"
        android:id="@+id/tvcod"
        android:layout_below="@+id/tvtitulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:textColor="#707070"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edcod"
        android:layout_below="@+id/tvcod"
        android:textColor="#050505"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALOR:"
        android:id="@+id/tvvalor"
        android:layout_below="@+id/edcod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#707070"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edvalor"
        android:layout_below="@+id/tvvalor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#050505"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:id="@+id/btguardar"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#797979"
        android:background="#d5d5d5"
        android:layout_below="@+id/edvalor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REGRESAR"
        android:id="@+id/btvolver"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#797979"
        android:background="#d5d5d5"
        android:onClick="VolverMenuAdmin"
        android:layout_below="@+id/btguardar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
